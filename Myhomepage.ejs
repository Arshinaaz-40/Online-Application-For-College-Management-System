        /* Import Google Font */
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

/* Global Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

/* Body Styling */
body {
    background-color: #f4f4f4;
    color: #333;
    line-height: 1.6;
}

/* Header Section */
header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #004080;
    color: white;
    padding: 15px 30px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
}

/* Logo Styling */
.logo {
    display: flex;
    align-items: center;
}

.logo img {
    width: 50px;
    height: 50px;
    margin-right: 10px;
    border-radius: 50%;
}

.logo h3 {
    font-size: 20px;
    font-weight: 600;
}

/* Navigation Styling */
nav ul {
    list-style: none;
    display: flex;
}

nav ul li {
    margin: 0 15px;
}

nav ul li a {
    text-decoration: none;
    color: white;
    font-size: 16px;
    font-weight: 500;
    transition: 0.3s;
}

nav ul li a:hover {
    color: #ffcc00;
}

/* Hero Section */
#displayed {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 50px;
    text-align: center;
    background: linear-gradient(to right, #004080, #0066cc);
    color: white;
    min-height: 400px;
}

#displayedMain h2 {
    font-size: 30px;
    font-weight: 600;
}

#displayedMain p {
    font-size: 18px;
    margin: 15px 0;
    max-width: 500px;
}

.DisplayedButtons a {
    display: inline-block;
    margin: 10px;
    padding: 12px 20px;
    background: #ffcc00;
    color: black;
    font-weight: 600;
    text-decoration: none;
    border-radius: 5px;
    transition: 0.3s;
}

.DisplayedButtons a:hover {
    background: #ffaa00;
}

.image-container img {
    width: 300px;
    border-radius: 10px;
    margin-left: 20px;
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2);
}

/* About Section */
#sectionTwo {
    background: #ffffff;
    padding: 50px;
    text-align: center;
}

#AboutSystem h3 {
    font-size: 28px;
    color: #004080;
    margin-bottom: 20px;
}

/* About Cards */
.about-cards {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
}

.about-card {
    background: white;
    padding: 20px;
    width: 300px;
    border-radius: 10px;
    box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: 0.3s;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 1s forwards ease-in-out;
}

.about-card:hover {
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2);
    transform: translateY(-5px);
}

.card-icon {
    font-size: 40px;
    margin-bottom: 10px;
}

.about-card h3 {
    font-size: 20px;
    margin-bottom: 10px;
    color: #004080;
}

.about-card p {
    font-size: 16px;
    color: #666;
}

/* Footer */
footer {
    background: #004080;
    color: white;
    text-align: center;
    padding: 20px;
    margin-top: 30px;
}

.footer-content p {
    font-size: 14px;
    margin: 5px 0;
}

/* Animations */
@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive Design */
@media (max-width: 768px) {
    header {
        flex-direction: column;
        text-align: center;
    }

    nav ul {
        flex-direction: column;
        margin-top: 10px;
    }

    nav ul li {
        margin: 5px 0;
    }

    #displayed {
        flex-direction: column;
        text-align: center;
    }

    .image-container {
        margin-top: 20px;
    }

    .about-cards {
        flex-direction: column;
    }

    .about-card {
        width: 90%;
        margin-bottom: 20px;
    }
}

